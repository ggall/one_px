<!DOCTYPE html>
<html>
<head>
  <title>OnePx</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <% if current_user? %>
      <span>Hola <%= current_user.email %> | <%= link_to 'Cerrar sesion', '#' %></span>
    <% else %>
      <%= link_to 'Registro', signup_path %> | <%= link_to 'Iniciar sesion', '#' %>
    <% end %>
  </header>

  <%= render 'shared/flash' %>

  <%= yield %>

</body>
</html>
